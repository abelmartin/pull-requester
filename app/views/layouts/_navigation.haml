.login
  - if current_user
    %a{href: current_user.github_url, target: '_blank'}
      %img.user-avatar{src: current_user.avatar_url, style: 'width:40px; height:40px;'}
      %span.user-name= current_user.name
    %ul.user-menu
      %li= link_to 'Account Settings', '#'
      %li= link_to 'Watch Settings', '#'
      %li= link_to 'Report Issues',
        'https://www.github.com/abelmartin/pull-requester/issues/new',
        target: '_blank'
      %li= link_to 'Logout', destroy_user_session_path, method: :delete
  - else
    %a{href: user_omniauth_authorize_path(:github)} Login with GitHub

.navbar.site_menu
  .navbar-inner
    = link_to "Pull Requester", root_path, :class => 'brand'
    - if current_user
      %ul.nav
        %li= link_to "Dashboard", root_path
        %li= link_to "Watches", watches_path
